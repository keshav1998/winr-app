name: "Security Scan"

on:
  push:
    branches: ["main", "develop"]
  pull_request:
    branches: ["main"]
  schedule:
    - cron: "36 5 * * 1" # Weekly on Monday

jobs:
  analyze:
    name: Analyze
    runs-on: ubuntu-latest
    timeout-minutes: 360
    permissions:
      actions: read
      contents: read
      security-events: write

    strategy:
      fail-fast: false
      matrix:
        language: ["javascript"]

    steps:
      - name: Checkout repository
        uses: actions/checkout@v4
        with:
          submodules: recursive

      - name: Initialize CodeQL
        uses: github/codeql-action/init@v3
        with:
          languages: ${{ matrix.language }}

      - name: Autobuild
        uses: github/codeql-action/autobuild@v3

      - name: Perform CodeQL Analysis
        uses: github/codeql-action/analyze@v3
        with:
          category: "/language:${{matrix.language}}"

  mythril:
    name: Mythril Analysis
    runs-on: ubuntu-latest
    steps:
      - name: Checkout repository
        uses: actions/checkout@v4
        with:
          submodules: recursive

      - name: Set up Python
        uses: actions/setup-python@v4
        with:
          python-version: "3.9"

      - name: Install Foundry
        uses: foundry-rs/foundry-toolchain@v1
        with:
          version: stable

      - name: Initialize submodules and install dependencies
        run: |
          pip3 install solc-select
          solc-select use 0.8.24 --always-install
          git submodule update --init --recursive
          forge install --no-commit

      - name: Build contracts
        run: |
          forge build

      - name: Install Mythril
        run: |
          pip install mythril

      - name: Run Mythril analysis
        run: |
          echo "Running Mythril security analysis..."

          # Check if contracts exist and dependencies are available
          if [ -f "contracts/WINR.sol" ] && [ -d "lib/openzeppelin-contracts" ]; then
            echo "Analyzing WINR.sol..."
            myth analyze contracts/WINR.sol --solv 0.8.24 --solc-remaps '@openzeppelin/=lib/openzeppelin-contracts/ @uniswap/v4-core/=lib/v4-core/ @uniswap/v4-periphery/=lib/v4-periphery/' || echo "âš ï¸ Mythril analysis failed for WINR.sol - may indicate security issues or dependency problems"
          else
            echo "âŒ Missing dependencies for WINR.sol analysis"
          fi

          if [ -f "contracts/TokenConversionService.sol" ]; then
            echo "Analyzing TokenConversionService.sol..."
            myth analyze contracts/TokenConversionService.sol --solv 0.8.24 --solc-remaps '@openzeppelin/=lib/openzeppelin-contracts/ @uniswap/v4-core/=lib/v4-core/ @uniswap/v4-periphery/=lib/v4-periphery/' || echo "âš ï¸ Mythril analysis failed for TokenConversionService.sol - may indicate security issues or dependency problems"
          else
            echo "âŒ TokenConversionService.sol not found"
          fi

          echo "âœ… Mythril analysis completed (check individual results above)"

  slither:
    name: Slither Analysis
    runs-on: ubuntu-latest
    steps:
      - name: Checkout repository
        uses: actions/checkout@v4
        with:
          submodules: recursive

      - name: Install Foundry
        uses: foundry-rs/foundry-toolchain@v1
        with:
          version: stable

      - name: Initialize submodules and install dependencies
        run: |
          pip3 install solc-select
          solc-select use 0.8.24 --always-install
          git submodule update --init --recursive
          forge install --no-commit

      - name: Build contracts
        run: |
          forge build

      - name: Install Slither
        run: |
          pip3 install slither-analyzer

      - name: Run Slither analysis
        run: |
          echo "Running Slither security analysis..."

          # Run Slither with proper error handling
          if slither . --solc-version 0.8.24 --solc-remaps '@openzeppelin/=lib/openzeppelin-contracts/ @uniswap/v4-core/=lib/v4-core/ @uniswap/v4-periphery/=lib/v4-periphery/' --print human-summary; then
            echo "âœ… Slither analysis completed successfully"
          else
            echo "âš ï¸ Slither analysis found issues or encountered errors"
            echo "This may indicate potential security vulnerabilities that need investigation"
            exit 1
          fi

  security-summary:
    name: Security Summary
    runs-on: ubuntu-latest
    needs: [mythril, slither]
    if: always()
    steps:
      - name: Security Analysis Summary
        run: |
          echo "## Security Analysis Results" >> $GITHUB_STEP_SUMMARY
          echo "" >> $GITHUB_STEP_SUMMARY

          if [ "${{ needs.mythril.result }}" == "success" ]; then
            echo "âœ… **Mythril Analysis**: Completed" >> $GITHUB_STEP_SUMMARY
          else
            echo "âš ï¸ **Mythril Analysis**: Issues found or failed" >> $GITHUB_STEP_SUMMARY
          fi

          if [ "${{ needs.slither.result }}" == "success" ]; then
            echo "âœ… **Slither Analysis**: Completed" >> $GITHUB_STEP_SUMMARY
          else
            echo "âš ï¸ **Slither Analysis**: Issues found or failed" >> $GITHUB_STEP_SUMMARY
          fi

          echo "" >> $GITHUB_STEP_SUMMARY
          echo "Please review individual job logs for detailed findings." >> $GITHUB_STEP_SUMMARY

