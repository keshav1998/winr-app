      - name: Initialize submodules and install dependencies
        run: |
          git submodule update --init --recursive
          forge install

      - name: Run Forge fmt
        run: |
          forge fmt --check
        id: fmt
        continue-on-error: true

      - name: Run Forge build
        run: |
          forge build --sizes
        id: build

      - name: Run Forge tests
        run: |
